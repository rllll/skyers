<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        app:titleBarColor="@color/xui_config_color_white"
        app:leftType="customView"
        app:leftCustomView="@layout/layout_custom_left"
        app:centerType="searchView"
        app:centerSearchRightType="voice"
        app:rightType="imageButton"
        app:rightImageResource="@mipmap/search"
        app:showBottomLine="false"
        android:id="@+id/mainTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.next.easynavigation.view.EasyNavigationBar
        android:id="@+id/myEasyNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>